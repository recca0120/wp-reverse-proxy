{
    "name": "recca0120/wp-reverse-proxy",
    "description": "WordPress reverse proxy plugin",
    "type": "wordpress-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Recca Tsai",
            "email": "recca0120@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0 || ^2.0",
        "psr/log": "^1.0 || ^2.0 || ^3.0",
        "nyholm/psr7": "^1.5",
        "psr/simple-cache": "^1.0",
        "symfony/yaml": "^4.4 || ^5.4 || ^6.0 || ^7.0"
    },
    "require-dev": {
        "php-http/mock-client": "^1.6",
        "phpunit/phpunit": "^8.5 || ^9.5",
        "wp-phpunit/wp-phpunit": "^6.6",
        "yoast/phpunit-polyfills": "^2.0",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Recca0120\\ReverseProxy\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Recca0120\\ReverseProxy\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "strauss": {
            "target_directory": "vendor-prefixed",
            "namespace_prefix": "Recca0120\\ReverseProxy\\Vendor\\",
            "classmap_prefix": "Recca0120_ReverseProxy_Vendor_",
            "constant_prefix": "RECCA0120_REVERSE_PROXY_VENDOR_",
            "delete_vendor_packages": true,
            "delete_vendor_files": true,
            "include_root_autoload": true
        }
    }
}
